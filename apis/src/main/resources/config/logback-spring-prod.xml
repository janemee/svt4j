<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10 seconds">
    <contextName>logback</contextName>
    <!--日志路径-->
    <property name="log.path" value="/home/prod/logs/apis"/>
    <!--日志文件名前缀-->
    <property name="log.info" value="/info"/>
    <!--日志格式-->
    <property name="log.pattern"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) %cyan(%-30.30logger{29} :) - %msg%n"/>
    <!--控制台日志-->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">

        <encoder>
            <pattern>${log.pattern}</pattern>
        </encoder>
    </appender>

    <!--info日志-->
    <appender name="fileInfoLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--每天分割日志-->
        <prudent>true</prudent>
        <!--滚动策略-->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--路径-->
            <fileNamePattern>${log.path}${log.info}-%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <!--日志格式-->
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>${log.pattern}</pattern>
        </layout>
    </appender>

    <!--选择输出策略-->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="fileInfoLog"/>
    </root>
    <logger name="org.springframework.boot" level="INFO"/>
    <logger name="com.huimi.core" level="INFO"/>
    <logger name="com.huimi.common" level="INFO"/>
    <logger name="com.huimi.api" level="INFO"/>
</configuration>
